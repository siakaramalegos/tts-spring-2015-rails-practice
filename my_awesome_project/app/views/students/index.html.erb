<p id="notice"><%= notice %></p>

<h1>Listing Students</h1>

<table class="table">
  <thead>
    <tr>
      <th>Name</th>
      <th>Computer</th>
      <th>Gender</th>
      <th>Birthday</th>
      <th>Favorite Drink</th>
      <th>Has Pets?</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @students.each do |student| %>
      <tr>
        <td><%= student.name %></td>
        <td><%= student.computer %></td>
        <td><%= student.gender %></td>
        <td><%= student.birthday.stamp("March 1") %></td>
        <td><%= student.drink %></td>
        <td><%= student.has_pets %></td>
        <td><%= link_to 'Show', student, class: "btn btn-default btn-xs" %></td>
        <td><%= link_to 'Edit', edit_student_path(student), class: "btn btn-default btn-xs" %></td>
        <td><%= link_to 'Destroy', student, method: :delete, data: { confirm: 'Are you sure?' }, class: "btn btn-danger btn-xs" %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Student', new_student_path, class: "btn btn-info" %>
