<p id="notice"><%= notice %></p>

<p>
  <strong>Genre:</strong>
  <%= @artist.genre.name %>
</p>

<p>
  <strong>Songs by <%= @artist.name.capitalize %>:</strong>

  <ul>
    <% @artist.songs.each do |song| %>
    <li><%= song.name %></li>
    <% end %>
  </ul>
</p>

<%= link_to 'Edit', edit_artist_path(@artist) %> |
